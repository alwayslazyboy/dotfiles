    username = alwayslazyboy

[core]
    editor = vim
    excludesfile = ~/.gitignore

[diff]
    tool = vimdiff

[difftool]
    prompt = false

[alias]
    a = add --all
    c = commit
    st = status
    co = checkout
    up = pull --rebase=merges
    g = grep --break --heading --line-number
    fa = fetch --all
    p = push
    pf = push -f
    copy-diff = !git diff | xclip -selection c
    paste-diff = !xclip -selection c -o | git apply -3

[color]
    diff = auto
    status = auto
    branch = auto

[push]
    default = simple

[mergetool]
    keepBackup = false
